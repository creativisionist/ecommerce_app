/* jumbrotron */

.jumbotron {
  background-image: image-url("<%= asset_path('minion_eyes.jpg') %>");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  text-align: center;
  padding-top: 300px;
  margin: auto;
}

.jumbotron > h1 {
  color: #FF9E39;
}

/* button*/
